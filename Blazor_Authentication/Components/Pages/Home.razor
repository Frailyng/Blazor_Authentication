@page "/"

<PageTitle>Home</PageTitle>

<div class="row">
    <div class="col-12">
        <h2 class="fw-bolder" Welcome to <span class="text-danger"> Coding Droplets</span></h2>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <AuthorizeView>
                    <NotAuthorized>
                        <span> Tu no estas registrado. por favor <a class="fw-bolder" href="/login">Click Aqui</a> para registrarte </span>
                    </NotAuthorized>
                    <Authorized>
                        <span> Registrado como<b>@context.User.Identity.Name</b> <a class="fm-bolder" href="/logout">Click Aqui</a> para cerrar sesion</span>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>

</div>
